<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LunchTicket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainLayoutStyle">
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="ContainerLayout">
        <item name="android:background">@drawable/container_background</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="TitleLogin" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TitleMain" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="DescriptionMain" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TextRoleBtn" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InputLabel" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="StudentRoleButton">
        <item name="android:background">@drawable/studentrolebutton_background</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="RestaurantRoleButton">
        <item name="android:background">@drawable/restaurantrolebutton_background</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="FinancialRoleButton">
        <item name="android:background">@drawable/financialrolebutton_background</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/backbutton_background</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppButtonMain" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/mainbutton_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/secondarybutton_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ImageButtonDefault" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="EditTextInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:height">48dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding">12dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_medium</item>
    </style>

    <style name="NavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>
</resources>