<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LunchTicket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainLayoutStyle">
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="ContainerLayout">
        <item name="android:background">@drawable/container_background</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="HistoryLayoutStyle">
        <item name="android:background">@drawable/historyitem_background</item>
    </style>

    <style name="TitleLogin" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TitleMainBlue" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TitleMainPurple" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="TitleMainBlack" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="SubTitleBlue" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="SubTitleGreen" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
