    <style name="DescriptionMain" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="DescriptionBold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TextProfileBlue" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextProfileNormal" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
