    <style name="AppButtonAlt" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/altbutton_background</item>
        <item name="android:textColor">@color/purple</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ImageButtonDefault" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="ImageButtonGreen" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/iconimagebutton_background</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="EditTextInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:height">48dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding">12dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_medium</item>
    </style>

    <style name="NavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>

    <style name="DateSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/date_spinner_background</item>
        <item name="android:elevation">5dp</item>
        <item name="android:dropDownVerticalOffset">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

